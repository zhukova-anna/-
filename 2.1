#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main()
{
    srand(time(NULL));
    int i,n,min,max;
    printf("n= ");
    scanf("%d",&n);
    while(n<0){
        printf("Try again");
        scanf("%d",&n);
    }
    int T[100];
    for(i=0;i<n;i++){
        T[i]=rand()%20;
    }
    for(i=0;i<n;i++){
        printf("%d ",T[i]);
    }
    min=T[0];
    for(i=0;i<n;i++){
        if(min>T[i]){
            min=T[i];
        }
    }
    max=T[0];
    for(i=0;i<n;i++){
        if(max<T[i]){
            max=T[i];
        }
    }
    float ser;
    ser=((float)min+(float)max)/2;
    printf("\nmin=%d", min);
    printf("\nmax=%d", max);
    printf("\nser=%.1f", ser);
    return 0;
}
