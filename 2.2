#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main()
{
    int n,i;
    printf("n= ");
    scanf("%d",&n);
    while(n<0){
        printf("Try again");
        scanf("%d",&n);
    }
    int* B;
    B = (int *)malloc(n * sizeof(int));
    for (i = 0; i < n; i++)
        B[i]=rand()%20;
    for (i = 0; i < n; i++)
        printf("%d ",B[i]);

    int tmp;
    int noSwap;

    for (i = n - 1; i >= 0; i--)
    {
        noSwap = 1;
        for (int j = 0; j < i; j++)
        {
            if (B[j] > B[j + 1])
            {
                tmp = B[j];
                B[j] = B[j + 1];
                B[j + 1] = tmp;
                noSwap = 0;
            }
        }
        if (noSwap == 1)
            break;
    }
    int max;
    max=B[0];
    for(i=0;i<n;i++){
        if(max<B[i]){
            max=B[i];
        }
    }
    printf("\nmax=%d",max);
    for(i=0;i<n;i++){
        B[i]=B[i]-max;
    }
    printf("\n");
    for (i = 0; i < n; i++)
        printf("%d ", B[i]);
    printf("\n");
    free(B);
    return 0;
}
