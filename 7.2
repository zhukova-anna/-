if(a[i]<-5||a[i]>3){
    dob=dob*a[i];
}
min=a[0];
printf("\ndob= %d",dob);
for (i = 0; i < n; i++)
if(a[i]<min){
    min=a[i];
}
printf("\nmin= %d",min);
}

